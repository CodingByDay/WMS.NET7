<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  
    android:padding="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="65.0dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Meni inventure"
        android:layout_marginTop="0.0dp"
        android:textStyle="bold|italic"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:bottomLeftRadius="7dp"
            android:bottomRightRadius="7dp"
            android:topLeftRadius="7dp"
            android:topRightRadius="7dp"
            android:layout_width="165.0dp"
            android:layout_height="46.0dp"
            android:background="@android:color/holo_blue_bright"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:drawableLeft="@drawable/open"
            android:text="Odpri dokument-F2"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:id="@+id/button1" />

        <Button
            android:bottomLeftRadius="7dp"
            android:bottomRightRadius="7dp"
            android:topLeftRadius="7dp"
            android:topRightRadius="7dp"
            android:layout_width="157.0dp"
            android:layout_height="46.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/holo_green_dark"
            android:drawableLeft="@drawable/inventory"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="Izvedba inventure-f3"
            android:textColor="#000000"
            android:id="@+id/button2" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:minWidth="25dp"
        android:minHeight="25dp">




    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:minWidth="25dp"
        android:minHeight="25dp">




    </LinearLayout>
    

</LinearLayout>