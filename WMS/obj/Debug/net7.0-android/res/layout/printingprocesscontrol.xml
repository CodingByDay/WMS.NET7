<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:text="Tiskanje - procesna kontrola"
        android:textColor="@color/rikoMain"
        android:id="@+id/lbInfo" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="Datum" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/dtDate"
            
            />

        <Button
            android:text="Izberi"
            android:layout_width="70dp"
  
            android:id="@+id/dateChoice"
            android:layout_height="30dp"
            android:layout_marginTop="-5dp"
            android:background="@color/rikoMain"
            android:textColor="@color/white"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="4dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:text="Uporabnik"
            android:id="@+id/textView1"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"/>

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbUser" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="Procesna kontrola"
            android:layout_marginBottom="14.5dp"
            android:textColor="@color/rikoMain"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="Izmena"
          />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbShift" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="Delavec"
             />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbWorker" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="SSCC koda"
/>

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbSSCC" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:text="Ident"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbIdent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:text="Naziv"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbTitle" />

    </LinearLayout>

    <TextView
        android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:paddingTop="5dp">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">

            <Button
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:text="Potrdi - f3"
                android:drawableLeft="@drawable/next_white"
                android:id="@+id/btNext" />

            <Button
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:text="Brez- f3"
                android:drawableLeft="@drawable/printer_white"
                android:id="@+id/btPrint" />


        </LinearLayout>
        <Button
            android:layout_weight="1"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/rikoMain"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="Izhod - F8"
            android:drawableLeft="@drawable/logout_white"
            android:id="@+id/button3"
    />

    </LinearLayout>
</LinearLayout>