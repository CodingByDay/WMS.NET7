<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="100%"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/app"
        android:layout_below="@id/text"
        />



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
        android:layout_toRightOf="@id/app"
        android:id="@+id/listView1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/app"
        android:weightSum="5"
        android:id="@+id/text"
        android:paddingTop="5dp">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Ident"
            android:layout_marginRight="28.0dp"
            android:id="@+id/ident"
            android:layout_width="match_parent" />

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Naziv"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/name" />

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Naročeno"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/quantity" />
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Prejeto"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/position" />


        <TextView
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Odprto"
            android:layout_marginRight="28.0dp"
            android:id="@+id/serial" />





    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/rikoMain"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Tiskanje - vhodna kontrola"
            android:id="@+id/lbInfo" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="120.0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Datum" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/dtDate" />

            <Button
                android:text="Izberi"
                android:layout_width="70.0dp"
                android:layout_height="30dp"
                android:layout_marginTop="-5dp"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/dateChoice" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
                                     >

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="120.0dp"
                android:layout_height="wrap_content"
                android:text="Uporabnik"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:id="@+id/textView1" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/tbUser" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:text="Vhodna kontrola"
                android:layout_marginBottom="10dp"
                android:id="@+id/lbInfoInput" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
                                     >

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Prevzem"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"/>

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/tbTakeOver" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="120.5dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Dobavitelj" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/tbSupplier" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="160.5dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Datum prevzema" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/tbTakeOverDate" />

        </LinearLayout>
        <TextView
            android:layout_height="0dip"
            android:layout_width="fill_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="2dp"
            android:paddingTop="5dp">

            <Button
                android:text="Nasled."
                android:drawableLeft="@drawable/next_white"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/btNext" />

            <Button
                android:text="Tiskaj"
                android:drawableLeft="@drawable/printer_white"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/btPrint" />


        </LinearLayout>
        <Button
            android:text="Izhod "
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/rikoMain"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:drawableLeft="@drawable/logout_white"
            android:id="@+id/btLogout"/>

    </LinearLayout>









</androidx.percentlayout.widget.PercentRelativeLayout>