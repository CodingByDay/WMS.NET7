<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="2dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:text="Ident"
            android:layout_marginRight="1.0dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="253.5dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="0.0dp"
            android:paddingTop="4dp"
            android:id="@+id/tbIdent"
            android:layout_marginRight="1.0dp"
            android:background="@drawable/editText_bg_grey" />


        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="290.5dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="0.0dp"
            android:paddingTop="4dp"
            android:id="@+id/lbIdentName"
            android:layout_marginRight="1.0dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/editText_bg_grey" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:layout_marginRight="2dp"
                                     >

        <TextView
            android:textStyle="bold"
            android:layout_width="100.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:text="SSCC"
            android:layout_marginRight="1.0dp"
            android:id="@+id/textView1" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.50"
            android:paddingTop="4dp"
            android:id="@+id/tbSSCC"
            android:background="@drawable/editText_bg_grey"/>

        <Button
            android:text="..."
            android:layout_width="39.0dp"
            android:layout_height="30dp"
            android:id="@+id/btMorePallets"
            android:layout_marginTop="0dp"
            android:background="@color/rikoMain"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="0dp"
        android:layout_marginRight="2dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:text="Serijska "
            android:layout_marginRight="0dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.50"
            android:paddingTop="4dp"
            android:id="@+id/tbSerialNum"
            android:background="@drawable/editText_bg_grey"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:layout_marginRight="2dp"
        >

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Izdano"
            android:paddingTop="4dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="0dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.50"
            android:paddingTop="4dp"
            android:id="@+id/tbIssueLocation"
            android:background="@drawable/editText_bg_grey"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:layout_marginRight="2dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:text="Prejeto"
            android:layout_marginRight="0dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="0dp"
            android:paddingTop="4dp"
            android:id="@+id/tbLocation"
            android:background="@drawable/editText_bg_grey"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:layout_marginRight="2dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:text="Količina"
            android:layout_marginRight="0dp"
            android:id="@+id/lbQty" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="0dp"
            android:paddingTop="4dp"
            android:id="@+id/tbPacking"
            android:background="@drawable/editText_bg_grey"
            />

        <Button
            android:text="-(F1)"
            android:layout_width="74.0dp"
            android:layout_height="33dp"
            android:id="@+id/button1"
            android:layout_marginTop="-5dp"
            android:background="@color/rikoMain"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:layout_marginRight="2dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:text="Št. enot"
            android:id="@+id/lbUnits" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="0dp"
            android:paddingTop="4dp"
            android:id="@+id/tbUnits"
            android:background="@drawable/editText_bg_grey"
            />


    </LinearLayout>


    <TextView
        android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3"
        android:paddingTop="4dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2"
            android:paddingTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">

            <Button
                android:layout_weight="1"
                android:background="@color/rikoMain"
                android:text="Serij. - f2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/newitem_white"
                android:id="@+id/btSaveOrUpdate"
                android:layout_marginBottom="0.0dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/white"/>

            <Button
                android:layout_weight="1"
                android:background="@color/rikoMain"
                android:text="Kreiraj - f3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/newitem_white"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:id="@+id/button3"
                android:layout_marginBottom="0.0dp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/white" />


        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="0dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">

            <Button
                android:background="@color/rikoMain"
                android:text="Zaklj. - f4"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/shipped_white"
                android:id="@+id/button5"
                android:layout_marginRight="2dp"
                android:textColor="@color/white"
                />

            <Button
                android:layout_weight="1"
                android:background="@color/rikoMain"
                android:text="Pregl. - f5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:drawableLeft="@drawable/focus_white"
                android:paddingLeft="10dp"
                android:id="@+id/button4"
                android:layout_marginTop="0.0dp"
                android:layout_marginBottom="0.0dp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/white"
                />


        </LinearLayout>
        <Button
            android:layout_weight="1"
            android:background="@color/rikoMain"
            android:text="Izhod - F9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:drawableLeft="@drawable/logout_white"
            android:paddingLeft="10dp"
            android:id="@+id/button6"
            android:layout_marginTop="0.0dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/white"
            />

    </LinearLayout>
</LinearLayout>