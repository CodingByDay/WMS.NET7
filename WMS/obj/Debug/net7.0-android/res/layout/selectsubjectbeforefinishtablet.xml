<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="100%"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/app"
        android:layout_below="@id/text"
        />



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
        android:layout_toRightOf="@id/app"
        android:id="@+id/listView1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/app"
        android:weightSum="5"
        android:id="@+id/text"
        android:paddingTop="5dp">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Ident"
            android:layout_marginRight="28.0dp"
            android:id="@+id/ident"
            android:layout_width="match_parent" />

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Naziv"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/name" />

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="NaroÄeno"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/quantity" />
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Prejeto"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/position" />


        <TextView
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Odprto"
            android:layout_marginRight="28.0dp"
            android:id="@+id/serial" />





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:id="@+id/app"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="67.0dp"
            android:minWidth="25dp"
            android:minHeight="25dp"
            android:id="@+id/textView1"
            android:layout_marginBottom="101.0dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="@drawable/edittext_bg_grey">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="54.5dp"
                android:id="@+id/cbSubject"
                android:layout_marginTop="24.5dp" />
        </RelativeLayout>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="74.5dp"
            android:id="@+id/textView22" />
        <TextView
            android:layout_height="0dip"
            android:layout_width="fill_parent"
            android:layout_weight="1" />
        <Button
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/rikoMain"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:text="Potrdi "
            android:layout_marginBottom="4dp"
            android:id="@+id/btConfirm" />

    </LinearLayout>









</androidx.percentlayout.widget.PercentRelativeLayout>