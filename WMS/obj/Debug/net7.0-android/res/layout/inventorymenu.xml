<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="16dp"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/rikoMain"
            android:paddingBottom="5dp"
            android:textSize="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/open_white"
            android:text="Odpri - F2"
            android:layout_marginBottom="4dp"
            android:textColor="#ffffff"
            android:id="@+id/button1" />

        <Button
            android:singleLine="true"
            android:layout_weight="1"
            android:bottomLeftRadius="7dp"
            android:bottomRightRadius="7dp"
            android:topLeftRadius="7dp"
            android:topRightRadius="7dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/rikoMain"
            android:drawableLeft="@drawable/inventory_white"
            android:paddingBottom="5dp"
            android:textSize="16dp"
            android:paddingLeft="7dp"
            android:drawablePadding="7dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="Izvedba - f3"
            android:textColor="#ffffff"
            android:id="@+id/button2" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@color/rikoMain"
            android:drawableLeft="@drawable/confirmation_white"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="20dp"
            android:textSize="16dp"
            android:paddingTop="8dp"
            android:text="Potrdi - f4"
            android:textColor="#ffffff"
            android:id="@+id/button3"
            />

        <Button
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:textSize="16dp"
            android:layout_marginBottom="4dp"
            android:background="@color/rikoMain"
            android:drawableLeft="@drawable/shipped_white"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="Odpri - f5"
            android:textColor="#ffffff"
            android:id="@+id/button4" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="16dp"
            android:background="@color/rikoMain"
            android:drawableLeft="@drawable/printer_white"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="20dp"
            android:paddingTop="6dp"
            android:text="Tiskaj inventuro-f6"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="0dp"
            android:textColor="#ffffff"
            android:id="@+id/button7" />




    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="115.0dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_marginTop="0.0dp"
        android:textStyle="bold|italic"
        android:textSize="18dp" />

    <Button
        android:singleLine="true"
        android:bottomLeftRadius="7dp"
        android:bottomRightRadius="7dp"
        android:topLeftRadius="7dp"
        android:topRightRadius="7dp"
        android:text="Odjava "
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="16dp"
        android:id="@+id/logout"
        android:layout_marginLeft="4.0dp"
        android:drawableLeft="@drawable/logout_white"
        android:paddingLeft="10dp"
        android:layout_marginRight="0.0dp"
        android:background="@color/rikoMain"
        android:textColor="#ffffff"/>

</LinearLayout>