<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="100%"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" 
         />
    </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/app"
        android:layout_below="@id/text"
        
        />



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
        android:layout_toRightOf="@id/app"
        android:id="@+id/listView1"
        
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/app"
        android:layout_marginTop="63dp"
        android:weightSum="6"
        android:id="@+id/text"
        android:paddingTop="5dp">



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        tools:context=".LinearLayout"
        android:foregroundGravity="center"
        android:layout_marginTop="70dp">

        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Poslovni dogodek"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label1"
            android:gravity="left"
            android:paddingLeft="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="@drawable/edittext_bg_grey">
            <CustomSearchableSpinner
                android:layout_width="match_parent"
                android:layout_height="41.0dp"
                android:id="@+id/cbDocType"
                android:gravity="center"
                android:spinnerMode="dialog"
              
           
       />
        </RelativeLayout>
        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Izdajno skladišče"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="39.0dp"
            android:id="@+id/label2"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="@drawable/edittext_bg_grey">
            <CustomSearchableSpinner
                android:layout_width="match_parent"
                android:layout_height="41.0dp"
                android:id="@+id/cbIssueWH"
                android:gravity="center"
                android:spinnerMode="dialog"
        
       />
        </RelativeLayout>
        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Prejemno skladišče"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="46.5dp"
            android:id="@+id/label3"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:padding="0dp"
            android:background="@drawable/edittext_bg_grey">
            <CustomSearchableSpinner
                android:layout_width="match_parent"
                android:layout_height="41.0dp"
                android:id="@+id/cbRecceiveWH"
                android:layout_marginBottom="0.0dp"
                android:gravity="center"
                android:spinnerMode="dialog"
         />
        </RelativeLayout>
        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_width="91.0dp"
            android:layout_height="182.5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"/>

        <TextView
            android:layout_height="0dip"
            android:layout_width="fill_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp"
            android:layout_marginBottom="4dp"
            >


            <Button
                android:text="Potrdi"
                android:drawableLeft="@drawable/next_white"
                android:id="@+id/btnConfirm"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"/>

            <Button
                android:text="Izhod"
                android:drawableLeft="@drawable/logout_white"
                android:id="@+id/logout"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>


        </LinearLayout>







    </LinearLayout>
</androidx.percentlayout.widget.PercentRelativeLayout>