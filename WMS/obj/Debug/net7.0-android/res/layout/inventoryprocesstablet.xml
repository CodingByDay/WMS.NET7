<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="100%"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/app"
        android:layout_below="@id/text"
        />



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
        android:layout_toRightOf="@id/app"
        android:id="@+id/listView1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/app"
        android:weightSum="5"
        android:id="@+id/text"
        android:paddingTop="5dp">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginRight="28.0dp"
            android:id="@+id/ident"
            android:layout_width="match_parent" />

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/name" />

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/quantity" />
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/position" />


        <TextView
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginRight="28.0dp"
            android:id="@+id/serial" />





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        android:layout_marginTop="70dp"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/rikoMain"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Inventura - izvedba inventure"
            android:id="@+id/textView4" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Skladišče"
            />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:padding="0dp"
                android:background="@drawable/edittext_bg_grey">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="49.5dp"
                    android:id="@+id/cbWarehouse" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
                                     >

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Lokacija"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:id="@+id/textView1"
                 />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@drawable/edittext_bg_aqua"
       >
                <EditText
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:paddingTop="5dp"
                    android:background="@drawable/editText_bg_grey"
                    android:layout_marginRight="2dp"
                    android:textSize="18dp"
                    android:id="@+id/tbLocation" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerLocation"
                    android:spinnerMode="dialog" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Ident"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@drawable/edittext_bg_aqua"
        >

                <EditText
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:paddingTop="5dp"
                    android:background="@drawable/editText_bg_grey"
                    android:layout_marginRight="2dp"
                    android:textSize="18dp"
                    android:id="@+id/tbIdent" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerIdent"
                    android:spinnerMode="dialog" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:id="@+id/linearLayout1"
                                     >

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Naziv"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:id="@+id/textView2" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/tbTitle" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="110.0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="SSCC "
                android:layout_marginRight="0.0dp" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/tbSSCC" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Serijska "
                android:id="@+id/textView3" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/tbSerialNum" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="110.0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Količina"
                />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/tbPacking" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="110.0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Št. enot"
                android:layout_marginRight="0.0dp"
                android:id="@+id/lbUnits" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/tbUnits" />

        </LinearLayout>
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="14.0dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginRight="55.5dp"
            android:id="@+id/space" />
        <TextView
            android:layout_height="0dip"
            android:layout_width="fill_parent"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="2dp"
            android:paddingTop="5dp">

            <Button
                android:text="Tiskaj"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:drawableLeft="@drawable/printer_white"
                android:id="@+id/btPrint" />

            <Button
                android:text="Potrdi"
                android:drawableLeft="@drawable/confirmation_white"
                android:id="@+id/button1"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="4dp"
            android:paddingTop="5dp">

            <Button
                android:text="Briši"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:drawableLeft="@drawable/delete_white"
                android:id="@+id/btDelete" />

            <Button
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="izhod"
                android:drawableLeft="@drawable/logout_white"
                android:id="@+id/button2"
               
                />


        </LinearLayout>
    </LinearLayout>









</androidx.percentlayout.widget.PercentRelativeLayout>