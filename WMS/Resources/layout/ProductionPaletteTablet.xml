        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:paddingTop="5dp">

            <Button
