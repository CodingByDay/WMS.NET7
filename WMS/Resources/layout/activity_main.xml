<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg">





    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
      >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/rikoMain">

            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="140.5dp"
                android:id="@+id/imglogo" 
                />
        </LinearLayout>

       

        <LinearLayout

            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >

            <View
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:id="@+id/separator"
                android:visibility="visible"
                android:background="@color/rikoMain"
                android:layout_marginBottom="30dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="VNESITE GESLO"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:singleLine="true"
                android:id="@+id/tbPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="5dp"
                android:background="@drawable/border"
                android:inputType="textPassword"
                android:breakStrategy="simple"
                android:focusedByDefault="true"
                android:hint="Geslo"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />



            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="0.0dp"
                android:id="@+id/progressBar1"
                android:layout_marginTop="20dp"
                android:visibility="invisible"/>

            <Button
                android:background="@drawable/squaredbutton"
                android:textColor="@color/white"
                android:text="Prijava"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:id="@+id/btnRegistrationClick"
                android:textSize="18sp"
                android:gravity="center_vertical | center_horizontal"
                android:drawablePadding="2sp"
                android:layout_gravity="center"
                android:layout_marginBottom="60.0dp"
         />
        </LinearLayout>
    </LinearLayout>
</LinearLayout> 