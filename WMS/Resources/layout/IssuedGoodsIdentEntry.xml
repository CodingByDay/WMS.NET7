<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Odprema blaga"
        android:layout_gravity="center" 
        android:layout_marginTop="15dp"
        android:textColor="@color/rikoMain"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
           android:textStyle="bold"
android:layout_width="100dp"
android:layout_height="wrap_content"
android:paddingLeft="4dp"
android:paddingTop="4dp"
            android:text="Ident" />

        <AutoCompleteTextView
              android:textStyle="bold"
          android:singleLine="true"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.50"
          android:paddingTop="5dp"
          android:background="@drawable/editText_bg_grey" 
            android:id="@+id/tbIdent" />

       


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >
        <TextView
         
            android:text="Naziv"
           android:textStyle="bold"
android:layout_width="100dp"
android:layout_height="wrap_content"
android:paddingLeft="4dp"
android:paddingTop="4dp"
            android:id="@+id/textView1" />

        <EditText
            android:textStyle="bold"
  android:singleLine="true"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_weight="0.50"
  android:paddingTop="5dp"
  android:background="@drawable/editText_bg_grey" 
            android:layout_marginRight="2dp"
            android:id="@+id/tbNaziv" />
    </LinearLayout>
    <TextView
        android:textStyle="bold"
        android:text="Naro훾ilo"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbOrderInfo"
        android:layout_gravity="center"
        android:foregroundGravity="center" 
        android:layout_marginLeft="3dp"
        android:textColor="@color/rikoMain"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
android:layout_width="100dp"
android:layout_height="wrap_content"
android:paddingLeft="4dp"
android:paddingTop="4dp"
            android:text="Naro훾ilo/poz." />

        <EditText
            android:textStyle="bold"
  android:singleLine="true"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_weight="0.50"
  android:paddingTop="5dp"
  android:background="@drawable/editText_bg_grey"
  android:layout_marginRight="2dp" 
            android:id="@+id/tbOrder" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Naro훾nik"
            android:paddingTop="5dp"
            android:paddingLeft="4dp"/>

        <EditText
            android:textStyle="bold"
  android:singleLine="true"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_weight="0.50"
  android:paddingTop="5dp"
  android:background="@drawable/editText_bg_grey"
  android:layout_marginRight="2dp" 
            android:id="@+id/tbConsignee" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="5dp"
            android:text="Datum dobave" />

        <EditText
            android:textStyle="bold"
  android:singleLine="true"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_weight="0.50"
  android:paddingTop="5dp"
  android:background="@drawable/editText_bg_grey"
  android:layout_marginRight="2dp" 
            android:id="@+id/tbDeliveryDeadline" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="5dp"
            android:text="Koli훾ina" />

        <EditText
         android:textStyle="bold"
  android:singleLine="true"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_weight="0.50"
  android:paddingTop="5dp"
  android:background="@drawable/editText_bg_grey"
  android:layout_marginRight="2dp" 
            android:id="@+id/tbQty" />

    </LinearLayout>

    <TextView android:layout_height="0dip" 
          android:layout_width="fill_parent"
          android:layout_weight="1" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5dp"
            android:layout_marginBottom="4dp">

        <Button
            android:layout_weight="1"
android:textSize="20dp"
android:paddingLeft="10dp"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/rikoMain"
android:textColor="@color/white"
android:layout_marginLeft="4dp"
android:layout_marginRight="2dp"
            android:text="Nasled. - F2"
           
            android:drawableLeft="@drawable/next_white"
            android:id="@+id/btNext" />

        <Button
            android:layout_weight="1"
android:textSize="20dp"
android:paddingLeft="10dp"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/rikoMain"
android:textColor="@color/white"
android:layout_marginLeft="2dp"
android:layout_marginRight="4dp"
            android:text="potrdi - f3"
           
            android:drawableLeft="@drawable/confirmation_white"
           
            android:id="@+id/btConfirm"
             />


    </LinearLayout>
     <LinearLayout
        android:weightSum="2"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="0dp"
            android:layout_marginBottom="4dp">

            <Button
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:text="pregl. - f4"
                android:drawableLeft="@drawable/focus_white"
                android:id="@+id/button4" />

        <Button
            android:layout_weight="1"
android:textSize="20dp"
android:paddingLeft="10dp"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/rikoMain"
android:textColor="@color/white"
android:layout_marginLeft="2dp"
android:layout_marginRight="4dp"
            android:text="izhod - f9"
            android:drawableLeft="@drawable/logout_white"
            android:id="@+id/button5"
             />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>