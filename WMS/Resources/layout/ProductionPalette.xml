<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="DN" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbWorkOrder" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="Ident" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbIdent" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="SSCC" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbSSCC" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="Serijska " />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbSerialNum" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="Karton" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbCard" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/legLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="Noga palete" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbLegCode" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="0dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:id="@+id/lbTotalQty"
            android:text="" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="1dp">

        <TextView
            android:textStyle="bold"
            android:layout_weight="25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            android:text="Št. kartona"
            android:layout_marginRight="28.0dp"
            android:id="@+id/Ident" />

        <TextView
            android:textStyle="bold"
            android:layout_weight="25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            android:text="Količina"
            android:layout_marginRight="28.0dp"
            android:id="@+id/Location" />
    </LinearLayout>

    <ListView
        android:background="?android:attr/activatedBackgroundIndicator"
        android:choiceMode="singleChoice"
        android:layout_width="match_parent"
        android:id="@+id/lvCardList"
        android:layout_height="129.0dp"
        android:listSelector="@android:color/holo_blue_light"
 
        />
    <TextView
        android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:paddingTop="5dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="1dp"
            android:layout_marginBottom="4dp">

            <Button
                android:text="potrdi - f4"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:drawableLeft="@drawable/confirmation_white"
                android:id="@+id/btConfirm" />

            <Button
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:text="izhod - f8"
                android:drawableLeft="@drawable/logout_white"
                android:id="@+id/button2"
            />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
