<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="2dp">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <TextView
        android:text="                                  Skladišče"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="37.0dp"
        android:minWidth="25dp"
        android:minHeight="25dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:id="@+id/lbExtra"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:textColor="@color/rikoMain"/>
    <Spinner
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="42.0dp"
        android:id="@+id/cbWarehouse" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        >

        <TextView
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Datum inv."
            android:layout_marginRight="0.0dp"
            android:layout_width="120dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0.0dp"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/dtInventory"
            android:background="@drawable/editText_bg_grey"
            />

        <Button
            android:text="Izberi"
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:id="@+id/btChoose"
            android:background="@color/rikoMain"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Št. popisov"
            android:layout_width="120dp" />

        <EditText
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbItems"
            android:background="@drawable/editText_bg_grey"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Potrdil"
            android:layout_width="120dp"/>

        <EditText
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbConfirmedBy"
            android:background="@drawable/editText_bg_grey"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Datum potrditve"
            />

        <EditText
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbConfirmationDate"
            android:background="@drawable/editText_bg_grey"/>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1.0dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"/>
    <TextView
        android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:paddingTop="5dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">

            <Button
                android:textSize="20dp"
                android:text="Potrdi - F3"
                android:drawableLeft="@drawable/confirmation_white"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/btOpen"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"   
                />

            <Button
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="Izhod - f8"
                android:drawableLeft="@drawable/logout_white"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button2"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
