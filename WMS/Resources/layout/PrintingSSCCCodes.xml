<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">
     <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22.5dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/rikoMain"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="Tiskanje etiket - SSCC kode" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
           android:textStyle="bold"
android:layout_width="100dp"
android:layout_height="match_parent"
android:gravity="bottom"
android:paddingLeft="4dp"
android:paddingTop="4dp"
            android:text="Å t. nalepk"
           />

        <EditText
        android:textStyle="bold"
  android:singleLine="true"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_weight="0.50"
  android:paddingTop="5dp"
  android:background="@drawable/editText_bg_grey"
  android:layout_marginRight="2dp"  
            android:id="@+id/tbNum" />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"/>
    <TextView android:layout_height="0dip" 
          android:layout_width="fill_parent"
          android:layout_weight="1" />
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:paddingTop="5dp"
        android:layout_marginBottom="4dp">


  <LinearLayout
        android:layout_weight="1"    
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5dp">

        <Button
        android:layout_weight="1"
android:textSize="20dp"
android:paddingLeft="10dp"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/rikoMain"
android:textColor="@color/white"
android:layout_marginLeft="4dp"
android:layout_marginRight="2dp"
            android:text="Tiskaj - f3"
            android:drawableLeft="@drawable/printer_white"
     
            android:id="@+id/button1" />

        <Button
           android:layout_weight="1"
android:textSize="20dp"
android:paddingLeft="10dp"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/rikoMain"
android:textColor="@color/white"
android:layout_marginLeft="2dp"
android:layout_marginRight="4dp"
            android:text="Izhod - f8"
            android:drawableLeft="@drawable/logout_white"
  
            android:id="@+id/button2" />


    </LinearLayout>
</LinearLayout>

</LinearLayout>