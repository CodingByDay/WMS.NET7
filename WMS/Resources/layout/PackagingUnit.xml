<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <TextView
        android:singleLine="true"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Pakiranje"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/rikoMain"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="Ident:"
  />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbIdent" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="Naziv:"
            android:id="@+id/textView1"
     />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbIdentName" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="Lokacija:"
 />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbLocation" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:text="SSCC koda:"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="4dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbSSCC" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:text="Serijska št.:"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="4dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbSerialNo" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="Količina"
            android:id="@+id/label" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbQty" />

        <Button
            android:text="-(F1)"
            android:layout_width="74.0dp"
            android:layout_height="33dp"
            android:layout_marginTop="-5dp"
            android:background="@color/rikoMain"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"
            android:id="@+id/btNegate" />

    </LinearLayout>
    <TextView
        android:textStyle="bold"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="1.0dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_marginRight="42.0dp" />
    <TextView
        android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:paddingTop="5dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2"
            android:paddingTop="5dp">

            <Button
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:text="Kreiraj - f2"
                android:drawableLeft="@drawable/newitem_white"
                android:id="@+id/btNew" />

            <Button
                android:text="Pregled - f3"
                android:drawableLeft="@drawable/focus_white"
                android:id="@+id/btList"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp" />


        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_marginBottom="4dp">

            <Button
                android:text="Zaključi - f4"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:drawableLeft="@drawable/confirmation_white"
                android:id="@+id/btFinish" />

            <Button
                android:text="Izhod - f9"
                android:drawableLeft="@drawable/logout_white"
                android:id="@+id/btExit"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>