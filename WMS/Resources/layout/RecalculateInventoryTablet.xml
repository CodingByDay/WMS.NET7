<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="189.5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text=""
        android:layout_marginRight="28.5dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="66.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Ident"
            android:layout_marginRight="28.5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="@drawable/edittext_bg_aqua"
            android:orientation="horizontal"
        >
            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/ident" />
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerIdent"
                android:spinnerMode="dialog" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:layout_width="66.5dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text=""
        android:layout_marginRight="28.5dp" />

    <Button
        android:text="Izračunaj"
        android:drawableLeft="@drawable/confirmation_white"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/rikoMain"
        android:textColor="@color/white"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:id="@+id/btCalculate"
             />

</LinearLayout>
