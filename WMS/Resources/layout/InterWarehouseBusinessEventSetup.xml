<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <TextView
        android:textStyle="bold"
        android:text="Posl dog"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label1"
        android:gravity="center"
        android:textColor="@color/rikoMain"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="42.5dp"
        android:id="@+id/cbDocType"
        android:gravity="center"
        android:spinnerMode="dialog"
        
        />

    <TextView
        android:textStyle="bold"
        android:text="Izdajno skladišće"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="39.0dp"
        android:id="@+id/label2"
        android:gravity="center"
        android:textColor="@color/rikoMain"/>
    <CustomSearchableSpinner
        android:layout_width="match_parent"
        android:layout_height="41.0dp"
        android:id="@+id/cbIssueWH"
        android:gravity="center"
        android:spinnerMode="dialog"
       />
    <TextView
        android:textStyle="bold"
        android:text="Prejemno skladišće"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="46.5dp"
        android:id="@+id/label3"
        android:gravity="center"
        android:textColor="@color/rikoMain"/>
    <CustomSearchableSpinner
        android:layout_width="match_parent"
        android:layout_height="48.0dp"
        android:id="@+id/cbRecceiveWH"
        android:layout_marginBottom="14.5dp"
        android:gravity="center"
        android:spinnerMode="dialog"
         />

    <TextView
        android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2"
            android:paddingTop="5dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">

            <Button
                android:layout_weight="1"
                android:textSize="20dp"
                android:background="@color/rikoMain"
                android:text="Potrdi - f3"
                android:drawableLeft="@drawable/next_white"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnConfirm"
                android:textColor="@color/white"
                android:layout_marginRight="2dp"/>

            <Button
                android:textSize="20dp"
                android:background="@color/rikoMain"
                android:text="Izhod - f8"
                android:drawableLeft="@drawable/logout_white"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/logout"
                android:layout_marginLeft="2dp"
                android:textColor="@color/white"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
