<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="100%"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>





    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
        android:layout_toRightOf="@id/app"
        android:id="@+id/listData"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/app"
        android:layout_marginTop="60dp"
        android:weightSum="6"
        android:id="@+id/text"
        android:paddingTop="5dp">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Ident "
            android:layout_marginRight="28.0dp"
            android:id="@+id/ident"
            android:layout_width="match_parent" />

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Naziv"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/name" />

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Količina"
            android:layout_marginRight="28.0dp"
            android:id="@+id/Number" />


        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Pozicija"
            android:layout_marginRight="28.0dp"
            android:id="@+id/sscc" />


        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Serijska številka"
            android:layout_marginRight="28.0dp"
            android:id="@+id/location" />




        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="SSCC"
            android:layout_marginRight="28.0dp"
            android:id="@+id/createdBy" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        android:layout_marginTop="70dp"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:textSize="18dp"
            android:textColor="@color/rikoMain"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:text="Vnesene pozicije na pakiranju:"
            android:id="@+id/lbInfo" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Ident" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/tbIdent" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
                                     >

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="SSCC koda"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:id="@+id/textView1" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/tbSSCC" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Serijska št." />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/tbSerialNo" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
                                     >

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Količina"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"/>

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/tbQty" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Lokacija" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/tbLocation" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Kreiral" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:background="@drawable/editText_bg_grey"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:id="@+id/tbCreatedBy" />

        </LinearLayout>

        <TextView
            android:layout_height="0dip"
            android:layout_width="fill_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="2dp"
            android:paddingTop="5dp">

            <Button
                android:text="nasled."
                android:drawableLeft="@drawable/next_white"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/btNext" />

            <Button
                android:text="uredi"
                android:drawableLeft="@drawable/fix_white"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/btUpdate" />


        </LinearLayout>





        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="4dp"
            android:layout_marginLeft="2dp">

            <Button
                android:text="izbriši"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:drawableLeft="@drawable/delete_white"
                android:id="@+id/btDelete" />

            <Button
                android:text="kreiraj"
                android:drawableLeft="@drawable/newitem_white"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/btCreate" />


        </LinearLayout>


        <Button
            android:text="Izhod "
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/rikoMain"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:drawableLeft="@drawable/logout_white"
            android:id="@+id/btLogout"/>






    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/app"
        android:layout_below="@id/text"
        />







</androidx.percentlayout.widget.PercentRelativeLayout>