<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">
        <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
   
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingTop="5dp"
            android:text="Skladišče:"
            android:gravity="bottom"
          />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="43.5dp"
            android:id="@+id/cbWarehouse"
            android:layout_marginTop="7.5dp"
            android:layout_marginBottom="0.0dp" 
            android:spinnerMode="dialog"  />



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:singleLine="true"      
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Prej. lokacija:"
            android:paddingTop="5dp"
            android:paddingLeft="4dp"
            android:id="@+id/textView1Location"
            android:layout_marginRight="2dp"
         />

        <EditText
              android:textStyle="bold"
  android:singleLine="true"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_weight="0.50"
  android:paddingTop="5dp"
  android:background="@drawable/editText_bg_grey"
  android:layout_marginRight="2dp"  
            android:id="@+id/tbLocation" />




    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:singleLine="true"            
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="5dp"
            android:text="SSCC koda:"
            android:layout_marginRight="2dp
            "
            />

        <EditText
        android:textStyle="bold"
  android:singleLine="true"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_weight="0.50"
  android:paddingTop="5dp"
  android:background="@drawable/editText_bg_grey"
  android:layout_marginRight="2dp"  
            android:id="@+id/tbSSCC" />


    </LinearLayout>



    <LinearLayout
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="6.5dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:minWidth="25dp"
        android:minHeight="25dp"
      
        android:id="@+id/linearLayout1" >

    </LinearLayout>
    <TextView
        android:singleLine="true"
        android:textStyle="bold"
        android:layout_width="114.5dp"
        android:layout_height="44.5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_marginRight="83.0dp" />
    
<TextView android:layout_height="0dip" 
          android:layout_width="fill_parent"
          android:layout_weight="1" />
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:paddingTop="5dp">
 <LinearLayout
        android:weightSum="2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="5dp"
            android:layout_marginBottom="4dp">

        <Button
          android:layout_weight="1"
android:textSize="20dp"
android:paddingLeft="10dp"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/rikoMain"
android:textColor="@color/white"
android:layout_marginLeft="4dp"
android:layout_marginRight="2dp"

            android:text="Potrdi - f3"
            android:drawableLeft="@drawable/confirmation_white"

            android:id="@+id/btConfirm" />

        <Button
      android:layout_weight="1"
android:textSize="20dp"
android:paddingLeft="10dp"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/rikoMain"
android:textColor="@color/white"
android:layout_marginLeft="2dp"
android:layout_marginRight="4dp"
            android:text="Izhod - f8"
            android:drawableLeft="@drawable/logout_white"
       
            android:id="@+id/btExit" />


    </LinearLayout>

        </LinearLayout>


</LinearLayout>